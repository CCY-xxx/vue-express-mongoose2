<%- include ../public/header.ejs%>

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">

            <%- include ../public/aslideleft.ejs%>

        </div>
        <div class="col-sm-10">
            <ol class="breadcrumb">
                <li class="active">商品管理
                </li>
                <li class="active">商品列表
                </li>
            </ol>
            <div class="panel panel-default">
                <div class="panel-heading">
                    搜索
                </div>
                <div class="panel-body">
                    <form role="form" class="form-inline">
                        <div class="form-group">
                            <label for="name">名称</label>
                            <input type="text" class="form-control" id="name" placeholder="请输入名称">
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-default">开始搜索</button>
                        </div>
                    </form>
                </div>
            </div>
            <!--
                列表展示
            -->
            <div class="table-responsive">
            <!-- <img src="/upload/nature1.jpg" alt="qq"> -->
                <table class="table table-striped ">
                    <thead>
                    <tr>
                        <th>编号</th>
                        <th>图标</th>
                        <th>名称</th>
                        <th>价格</th>
                        <th>邮费</th>

                        <th class="text-center">操作</th>
                    </tr>
                    </thead>
                    <tbody>

                <% for(var i=0;i<list.length;i++){%>
                <%if(list[i].productImage.split('\\')[0]==='uplod'){%>
					 <tr>
                        <td><%=i+1%></td>
                        <td><img  width="100" src="/<%=list[i].productImage%>" alt=""/></td>
                        <td><%=list[i].productName%></td>
                        <td><%=list[i].salePrice%></td>
                         <td><%=list[i].productId%></td>

                        <td class="text-center">
                            <a href="/admin/product/load?id=<%=list[i]._id%>" class="btn btn-success">下载图片</a>
                            <a href="/admin/product/edit?id=<%=list[i]._id%>" class="btn btn-success">修改后台</a>
                            <a href="/admin/product/delete?id=<%=list[i]._id%>" class="btn btn-danger">删除后台</a>

                       </td>
                    </tr>
                <% } %>
                <%if(list[i].productImage.split('\\')[0]==='upload'){%>
                <tr>
                    <td><%=i+1%></td>
                    <td><img  width="100" src="/<%=list[i].productImage%>" alt=""/></td>
                    <td><%=list[i].productName%></td>
                    <td><%=list[i].salePrice%></td>
                    <td><%=list[i].productId%></td>

                    <td class="text-center">
                        <a href="/admin/product/load?id=<%=list[i]._id%>" class="btn btn-success">下载图片</a>
                        <a href="/admin/product/edit?id=<%=list[i]._id%>" class="btn btn-success">修改前台</a>
                        <a href="/admin/product/delete?id=<%=list[i]._id%>" class="btn btn-danger">删除前台</a>

                    </td>
                </tr>
                <% } %>
                    <%}%>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

</body>
</html>
